# ===========================================
# COTISA Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!
# ===========================================

# Django Settings
# ----------------
# Generate new key with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-key-here-change-this
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# ----------------------
DB_ENGINE=django.db.backends.mysql
DB_NAME=cotisa_pro
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=3306

# Google OAuth
# ------------
# Get these from: https://console.cloud.google.com/
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# CORS Origins (comma-separated)
# ------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000

# Email Configuration
# -------------------
# Local Postfix mail server (default - no auth needed):
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=COTISA <noreply@cotisa.de>
SERVER_EMAIL=server@cotisa.de

# If using external SMTP (Gmail, Mailjet, etc.):
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Production Settings
# -------------------
# Set these in production:
# DEBUG=False
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
